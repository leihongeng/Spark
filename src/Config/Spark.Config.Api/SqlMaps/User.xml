<?xml version="1.0" encoding="utf-8" ?>
<SmartSqlMap Scope="User" xmlns="http://SmartSql.net/schemas/SmartSqlMap.xsd">
  <ResultMaps>
    <ResultMap Id="UserResultMap">
      <Result Column="id" Property="Id" />
      <Result Column="mobile" Property="Mobile" />
      <Result Column="user_name" Property="UserName" />
      <Result Column="password" Property="Password" />
      <Result Column="is_delete" Property="IsDelete" />
      <Result Column="is_admin" Property="IsAdmin" />
      <Result Column="add_time" Property="AddTime" />
      <Result Column="update_time" Property="UpdateTime" />
    </ResultMap>
  </ResultMaps>
  <MultipleResultMaps>
    <MultipleResultMap Id="QueryPagedResult">
      <Result Property="Total" />
      <Result Property="List" />
    </MultipleResultMap>
  </MultipleResultMaps>
  <Statements>

    <Statement Id="QueryParams">
      <Where>
        <IsNotEmpty Prepend="And" Property="Id">
          id= ?Id
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="Mobile">
          mobile= ?Mobile
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="UserName">
          user_name= ?UserName
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="Password">
          password= ?Password
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="IsDelete">
          is_delete= ?IsDelete
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="AddTime">
          add_time= ?AddTime
        </IsNotEmpty>
        <IsNotEmpty Prepend="And" Property="UpdateTime">
          update_time= ?UpdateTime
        </IsNotEmpty>
      </Where>
    </Statement>

    <Statement Id="OrderAndPaged">
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          id Desc
        </Default>
      </Switch>
      <IsNotNull Prepend="" Property="PageSize">
        <IsNotNull Prepend="" Property="Offset">
          LIMIT ?Offset,?PageSize
        </IsNotNull>
        <IsNull Prepend="" Property="Offset">
          LIMIT ?Limit
        </IsNull>
      </IsNotNull>
    </Statement>

    <!--新增-->
    <Statement Id="Insert">
      INSERT INTO user
      (
      mobile,
      user_name,
      password,
      is_admin,
      is_delete,
      add_time,
      update_time
      )
      VALUES
      (
      ?Mobile,
      ?UserName,
      ?Password,
      ?IsAdmin,
      ?IsDelete,
      ?AddTime,
      ?UpdateTime
      )
      ;Select Last_Insert_Id();
    </Statement>

    <!--删除-->
    <Statement Id="Delete">
      Delete From user
      <Include RefId="QueryParams" />
    </Statement>

    <!--更新-->
    <Statement Id="Update">
      UPDATE user
      <Set>
        <IsProperty Prepend="," Property="Mobile">
          mobile = ?Mobile
        </IsProperty>
        <IsProperty Prepend="," Property="UserName">
          user_name = ?UserName
        </IsProperty>
        <IsProperty Prepend="," Property="Password">
          password = ?Password
        </IsProperty>
        <IsProperty Prepend="," Property="IsDelete">
          is_delete = ?IsDelete
        </IsProperty>
        <IsProperty Prepend="," Property="AddTime">
          add_time = ?AddTime
        </IsProperty>
        <IsProperty Prepend="," Property="UpdateTime">
          update_time = ?UpdateTime
        </IsProperty>
      </Set>
      Where id=?Id
    </Statement>

    <!--获取数据列-->
    <Statement Id="Query" ResultMap="UserResultMap">
      SELECT * From user
      <Include RefId="QueryParams" />
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          id Desc
        </Default>
      </Switch>
      <IsNotEmpty Prepend="Limit" Property="Taken">?Taken</IsNotEmpty>
    </Statement>

    <!--获取分页数据-->
    <Statement Id="QueryByPage" ResultMap="UserResultMap">
      Select * From user
      <Include RefId="QueryParams" />
      <Switch Prepend="Order By" Property="OrderBy">
        <Default>
          id Desc
        </Default>
      </Switch>
      Limit ?Offset,?PageSize
    </Statement>

    <Statement Id="QueryPaged" MultipleResultMap="QueryPagedResult" ResultMap="UserResultMap">
      SELECT COUNT(1) FROM user
      <Include RefId="QueryParams" />;
      SELECT * FROM user
      <Include RefId="QueryParams" />
      <Include RefId="OrderAndPaged" />;
    </Statement>

    <!--获取记录数-->
    <Statement Id="GetRecord">
      Select Count(1) From user
      <Include RefId="QueryParams" />
    </Statement>

    <!--获取表映射实体-->
    <Statement Id="GetEntity" ResultMap="UserResultMap">
      Select * From user
      <Include RefId="QueryParams" />
      Limit 1
    </Statement>

    <!--是否存在该记录-->
    <Statement Id="IsExist">
      Select Count(1) From user
      <Include RefId="QueryParams" />
    </Statement>

    <Statement Id="GetList" MultipleResultMap="QueryPagedResult" ResultMap="UserResultMap">
      SELECT COUNT(1) FROM user
      <IsNotNull Property="Keyword">
        WHERE mobile LIKE CONCAT('%',?Keyword,'%')
        OR user_name LIKE CONCAT('%',?Keyword,'%')
      </IsNotNull>;

      SELECT * FROM user
      <IsNotNull Property="Keyword">
        WHERE mobile LIKE CONCAT('%',?Keyword,'%')
        OR user_name LIKE CONCAT('%',?Keyword,'%')
      </IsNotNull>
      ORDER BY add_time DESC
      LIMIT ?Offset,?PageSize;
    </Statement>
  </Statements>
</SmartSqlMap>